@page "/wfs-layers"
@using PyroGeoBlazor.Demo.Models
@using PyroGeoBlazor.Leaflet.Components
@using PyroGeoBlazor.Leaflet.Models

<PageTitle>WFS Layers - PyroGeoBlazor Demo</PageTitle>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h2 class="mb-3">WFS (Web Feature Service) Layers</h2>
            <p class="text-muted">Dynamic feature loading with auto-refresh on pan/zoom and bounded by map view</p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-9">
            <LeafletMap Height="600" Map="PositionMap" TileLayer="OpenStreetMapsTileLayer" Controls="MapControls" />
        </div>
        
        <div class="col-md-3">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">WFS Controls</h5>
                </div>
                <div class="card-body">
                    <h6>WFS Layer</h6>
                    <div class="d-grid gap-2 mb-3">
                        <button class="btn btn-sm btn-outline-info" @onclick="AddWfsLayer" disabled="@wfsLayerAdded">
                            <i class="bi bi-cloud-arrow-down"></i> Load WFS Layer
                        </button>
                    </div>

                    @if (wfsLayerAdded)
                    {
                        <div class="d-grid gap-2 mb-3">
                            <button class="btn btn-sm btn-outline-warning" @onclick="ReloadWfsLayer">
                                <i class="bi bi-arrow-clockwise"></i> Reload Layer
                            </button>
                        </div>

                        <div class="alert alert-success py-2 px-2 small">
                            <strong>Auto-Refresh:</strong> Enabled<br/>
                            <small class="text-muted">Features refresh automatically when you pan or zoom the map</small>
                        </div>

                        <h6>Selection</h6>
                        <div class="d-grid gap-2">
                            <button class="btn btn-sm btn-outline-danger" @onclick="ClearSelection">
                                <i class="bi bi-x-circle"></i> Clear Selection
                            </button>
                        </div>

                        @if (selectedCount > 0)
                        {
                            <div class="alert alert-info py-2 px-2 small mt-2">
                                <strong>Selected:</strong> @selectedCount features
                            </div>
                        }
                    }
                </div>
            </div>

            <div class="card mt-3">
                <div class="card-header">
                    <h6 class="mb-0">WFS Features</h6>
                </div>
                <div class="card-body">
                    <small>
                        <ul class="mb-0">
                            <li>Bounded by map view</li>
                            <li>Auto-refresh on pan/zoom</li>
                            <li>Incremental loading</li>
                            <li>Feature selection</li>
                            <li>GeoServer integration</li>
                        </ul>
                    </small>
                </div>
            </div>

            <div class="card mt-3">
                <div class="card-header">
                    <h6 class="mb-0">Usage Tips</h6>
                </div>
                <div class="card-body">
                    <small>
                        <ol class="mb-0 ps-3">
                            <li>Click "Load WFS Layer"</li>
                            <li>Pan or zoom the map</li>
                            <li>Watch features load automatically</li>
                            <li>Click features to select</li>
                            <li>Use Ctrl+Click for multiple</li>
                        </ol>
                    </small>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <a href="/" class="btn btn-link">&larr; Back to Home</a>
        </div>
    </div>
</div>
