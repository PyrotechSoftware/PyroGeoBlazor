@page "/geojson-layers"
@using PyroGeoBlazor.Demo.Models
@using PyroGeoBlazor.Leaflet.Components
@using PyroGeoBlazor.Leaflet.Models

<PageTitle>GeoJSON Layers - PyroGeoBlazor Demo</PageTitle>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h2 class="mb-3">GeoJSON Layers</h2>
            <p class="text-muted">Work with GeoJSON data including features, styling, filtering, and callbacks</p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-9">
            <LeafletMap Height="600" Map="PositionMap" TileLayer="OpenStreetMapsTileLayer" Controls="MapControls" />
        </div>
        
        <div class="col-md-3">
            <div class="card">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0">GeoJSON Controls</h5>
                </div>
                <div class="card-body">
                    <h6>Load Data</h6>
                    <div class="d-grid gap-2 mb-3">
                        <button class="btn btn-sm btn-outline-warning" @onclick="AddGeoJsonLayer" disabled="@geoJsonLayerAdded">
                            <i class="bi bi-file-earmark-code"></i> Load GeoJSON
                        </button>
                    </div>

                    @if (geoJsonLayerAdded)
                    {
                        <h6>Selection Mode</h6>
                        <div class="mb-3">
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" id="selectionSwitch" checked="@selectionEnabled" @onchange="ToggleSelection">
                                <label class="form-check-label" for="selectionSwitch">
                                    Selection (@(selectionEnabled ? "On" : "Off"))
                                </label>
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" id="multiSelectSwitch" checked="@multiSelectEnabled" disabled="@(!selectionEnabled)" @onchange="ToggleMultiSelect">
                                <label class="form-check-label" for="multiSelectSwitch">
                                    Multi-Select (@(multiSelectEnabled ? "On" : "Off"))
                                </label>
                            </div>
                        </div>

                        <h6>Actions</h6>
                        <div class="d-grid gap-2">
                            <button class="btn btn-sm btn-outline-danger" @onclick="ClearSelection" disabled="@(!selectionEnabled)">
                                <i class="bi bi-x-circle"></i> Clear Selection
                            </button>
                        </div>

                        @if (selectedCount > 0)
                        {
                            <div class="alert alert-success py-2 px-2 small mt-3">
                                <strong>Selected:</strong> @selectedCount features
                            </div>
                        }
                    }
                </div>
            </div>

            <div class="card mt-3">
                <div class="card-header">
                    <h6 class="mb-0">GeoJSON Features</h6>
                </div>
                <div class="card-body">
                    <small>
                        <ul class="mb-0">
                            <li>Load GeoJSON data</li>
                            <li>Custom styling per feature</li>
                            <li>Feature filtering</li>
                            <li>Point to layer callback</li>
                            <li>Hover effects</li>
                            <li>Feature selection</li>
                            <li>OnEachFeature callback</li>
                        </ul>
                    </small>
                </div>
            </div>

            <div class="card mt-3">
                <div class="card-header">
                    <h6 class="mb-0">Callbacks</h6>
                </div>
                <div class="card-body">
                    <small>
                        <strong>Style:</strong> Custom per feature<br/>
                        <strong>Filter:</strong> Include all<br/>
                        <strong>OnEachFeature:</strong> Enabled<br/>
                        <strong>PointToLayer:</strong> Custom markers<br/>
                        <strong>CoordsToLatLng:</strong> Standard
                    </small>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <a href="/" class="btn btn-link">&larr; Back to Home</a>
        </div>
    </div>
</div>
