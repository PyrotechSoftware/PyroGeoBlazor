@page "/vector-tiles"
@using PyroGeoBlazor.Demo.Models
@using PyroGeoBlazor.Leaflet.Components
@using PyroGeoBlazor.Leaflet.Models

<PageTitle>Vector Tiles - PyroGeoBlazor Demo</PageTitle>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h2 class="mb-3">Vector Tiles (Mapbox Vector Tiles / PBF)</h2>
            <p class="text-muted">High-performance rendering with interactive features, selection, and dynamic styling</p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-9">
            <LeafletMap Height="600" Map="PositionMap" TileLayer="OpenStreetMapsTileLayer" Controls="MapControls" />
        </div>
        
        <div class="col-md-3">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">Vector Tile Controls</h5>
                </div>
                <div class="card-body">
                    <h6>Layers</h6>
                    <div class="d-grid gap-2 mb-3">
                        <button class="btn btn-sm btn-outline-success" @onclick="AddVectorTileLayers" disabled="@layersAdded">
                            <i class="bi bi-layers"></i> Load Vector Layers
                        </button>
                    </div>

                    @if (layersAdded)
                    {
                        <h6>Interactivity</h6>
                        <div class="mb-3">
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" id="interactiveSwitch" checked="@isInteractive" @onchange="ToggleInteractive">
                                <label class="form-check-label" for="interactiveSwitch">
                                    Interactive (@(isInteractive ? "On" : "Off"))
                                </label>
                            </div>
                        </div>

                        <h6>Selection Mode</h6>
                        <div class="mb-3">
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" id="selectionSwitch" checked="@selectionEnabled" disabled="@(!isInteractive)" @onchange="ToggleSelection">
                                <label class="form-check-label" for="selectionSwitch">
                                    Selection (@(selectionEnabled ? "On" : "Off"))
                                </label>
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" id="multiSelectSwitch" checked="@multiSelectEnabled" disabled="@(!selectionEnabled)" @onchange="ToggleMultiSelect">
                                <label class="form-check-label" for="multiSelectSwitch">
                                    Multi-Select (@(multiSelectEnabled ? "On" : "Off"))
                                </label>
                            </div>
                        </div>

                        <h6>Actions</h6>
                        <div class="d-grid gap-2">
                            <button class="btn btn-sm btn-outline-danger" @onclick="ClearSelection" disabled="@(!selectionEnabled)">
                                <i class="bi bi-x-circle"></i> Clear Selection
                            </button>
                        </div>
                    }
                </div>
            </div>

            <div class="card mt-3">
                <div class="card-header">
                    <h6 class="mb-0">Features</h6>
                </div>
                <div class="card-body">
                    <small>
                        <ul class="mb-0">
                            <li>Interactive hover effects</li>
                            <li>Feature selection</li>
                            <li>Multi-segment support</li>
                            <li>Dynamic styling</li>
                            <li>Runtime control</li>
                        </ul>
                    </small>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <a href="/" class="btn btn-link">&larr; Back to Home</a>
        </div>
    </div>
</div>
